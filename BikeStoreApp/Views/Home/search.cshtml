<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search Results - BikeStoreApp</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BikeStoreApp.styles.css" asp-append-version="true" />
    <style>
        .card {
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 350px;
        }
        .card-img-top {
            object-fit: cover;
            max-height: 200px;
            width: 100%;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }
        .card-body {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-4">Search Results</h2>

        @if (Model.Count > 0)
        {
            foreach (var product in Model)
            {
                <div class="card">
                    <img src="@Url.Content("~/image/" + product.Img)" class="card-img-top" alt="Bike Image">
                    <div class="card-body">
                        <h5 class="card-title">Product: @product.Name</h5>
                        <p class="card-text">Price: $@product.Price</p>
                        <p class="card-text">Store: @product.Store.Name</p>
                        <p class="card-text">Location: @product.Store.Location</p>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                No records found.
            </div>
        }

        <div class="container">
            <button onclick="goBack()" class="btn btn-primary">Back</button>
        </div>
    </div>

    <script>
        function goBack() {
            window.history.back();
        }
    </script>
</body>
</html>
