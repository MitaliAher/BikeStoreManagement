@model List<BikeStoreApp.Models.Order>

<h2>All Orders</h2>

<form method="get" asp-controller="Home" asp-action="SearchOrder">
    <input type="text" name="searchQuery" placeholder="Search by Order ID or Customer Name">
    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product</th>
            <th>Customer Name</th>
            <th>Contact No</th>
            <th>Final Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.ProductName</td>
                <td>@order.CustomerName</td>
                <td>@order.Contact</td>
                <td>@order.FinalAmount</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="AdminDashboard">Back</a>
